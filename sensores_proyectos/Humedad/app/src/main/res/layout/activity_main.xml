<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:id="@+id/firstLayout">

    <TextView
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:id="@+id/xValue"/>

    <TextView
        android:layout_width="100sp"
        android:layout_height="match_parent"
        android:id="@+id/yValue"
        android:layout_marginTop="30sp"
        android:layout_below="@+id/xValue"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/zValue"
        android:layout_marginTop="30sp"
        android:layout_below="@+id/yValue"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:id="@+id/secondLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstLayout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/xGyroValue"
            android:layout_width="100sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/yGyroValue"
            android:layout_width="100sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/zGyroValue"
            android:layout_width="100sp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/secondLayout"
        android:id="@+id/thirdLayout">
        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/xMagnoValue"/>
        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/yMagnoValue"/>
        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/zMagnoValue"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/thirdLayout"
        android:id="@+id/fourthLayout">
        <TextView
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:id="@+id/light"/>
        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/pressure"/>
        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/temp"/>
        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/humi"/>

    </LinearLayout>

</RelativeLayout>